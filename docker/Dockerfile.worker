# Swarm Worker Node
# Runs multiple LLM workers and reports to coordinator

FROM node:20-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./
RUN npm ci --only=production

# Copy source
COPY lib/ ./lib/
COPY bin/ ./bin/
COPY docker/worker/ ./worker/

# Start worker agent
CMD ["node", "worker/agent.js"]
